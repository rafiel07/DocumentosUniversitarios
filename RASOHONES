-- Tabla de Clientes
CREATE TABLE Clientes (
ClienteID INT PRIMARY KEY,
Nombre VARCHAR(50),
Telefono VARCHAR(15)
);
-- Tabla de Empleados
CREATE TABLE Empleados (
EmpleadoID INT PRIMARY KEY,
Nombre VARCHAR(50),
Cargo VARCHAR(50)
);
